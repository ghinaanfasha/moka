<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Tugas</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ionicons/5.5.3/ionicons.min.js"></script>
    <!-- Import SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="h-screen flex flex-col bg-cover bg-center pt-[60px] font-montserrat" style="background-image: url('/images/bg_moka.png');">
    
    <!-- Navbar -->
    <%- include('../layout/navStaf') %>

    <!-- Kontainer Utama -->
    <div class="flex-grow justify-center items-start mt-[40px]">
        <div class="bg-white bg-opacity-90 rounded-[10px] p-10 shadow-lg w-[1400px]">
            
            <!-- Header -->
            <h2 class="text-2xl font-bold text-[#C15E15] mb-3">Update Tugas</h2>

            <!-- Informasi Tugas -->
            <div class="flex items-start">
                <!-- Informasi Tugas Kiri -->
                <div class="w-1/2 pr-4 text-gray-600">
                    <div class="flex">
                        <span class="w-[140px] font-medium">Nama Tugas</span>
                        <span class="mr-2">:</span> 
                        <span class="font-light">Indikator Kinerja</span>
                    </div>
                    <div class="flex mt-1">
                        <span class="w-[140px] font-medium">Penugas</span>
                        <span class="mr-2">:</span>
                        <span class="font-light">Medi Iswandi</span>
                    </div>
                    <div class="flex mt-1">
                        <span class="w-[140px] font-medium">Deskripsi</span>
                        <span class="mr-2">:</span>
                        <span class="font-light">Membuat Faktor Pendorong dan Penghambat Indikator Kinerja</span>
                    </div>
                </div>
                
                <!-- Garis Pembatas -->
                <div class="border-l border-gray-400 h-full mx-4"></div>

                <!-- Informasi Tugas Kanan -->
                <div class="w-1/2 pl-4 text-gray-600">
                    <div class="flex">
                        <span class="w-[100px] font-medium">Dokumen</span>
                        <span class="mr-2">:</span>
                        <a href="/files/laporan-q1.pdf" class="text-blue-500 underline">Download PDF</a>
                    </div>
                    <div class="flex mt-1">
                        <span class="w-[100px] font-medium">Deadline</span>
                        <span class="mr-2">:</span>
                        <span class="font-light">02/02/2025 (22.00)</span>
                    </div>
                </div>
            </div>

            <!-- Progres Rincian Tugas -->
            <div class="mt-4">
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Progres Rincian Tugas</h3>
                <div class="flex items-center space-x-4">
                    <!-- Dropdown Status -->
                    <div class="w-1/2">
                        <label for="progressStatus" class="text-gray-700 font-medium">Status Progres:</label>
                        <select id="progressStatus" autofocus class="mt-1 w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#C15E15]">
                            <option value="" disabled selected>Pilih status progres</option>
                            <option value="Selesai">Selesai</option>
                            <option value="Belum Selesai">Belum Selesai</option>
                        </select>
                    </div>

                    <!-- Upload Dokumen -->
                    <div class="w-1/2">
                        <label for="uploadFile" class="text-gray-700 font-medium">Upload Dokumen:</label>
                        <input type="file" id="uploadFile" class="mt-1 w-full p-2 border rounded-lg focus:outline-none">
                    </div>
                </div>
            </div>

            <!-- Catatan -->
            <div class="mt-4">
                <label for="notes" class="text-gray-700 font-medium">Catatan:</label>
                <textarea id="notes" rows="2" class="mt-0 w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#C15E15]" placeholder="Tambahkan catatan jika diperlukan"></textarea>
            </div>

            <!-- Feedback -->
            <div class="mt-4">
                <label for="feedback" class="text-gray-700 font-medium">Feedback:</label>
                <textarea id="feedback" rows="2" class="mt-0 w-full p-2 border rounded-lg bg-gray-100 text-gray-500 cursor-not-allowed focus:outline-none" placeholder="Diisi oleh penugas" disabled></textarea>
            </div>
            

            <!-- Tombol Update & Cancel -->
            <div class="flex justify-end space-x-3 mt-4">
                <button id="cancelButton" class="px-4 py-2 border-2 border-red-500 text-red-500 rounded-md hover:bg-red-500 hover:text-white transition">
                    Cancel
                </button>
                <button id="updateButton" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition">
                    Update
                </button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../layout/footer') %>

    <script>
        document.getElementById("updateButton").addEventListener("click", function() {
            const progressStatus = document.getElementById("progressStatus").value;

            if (!progressStatus) {
                Swal.fire({
                    icon: "warning",
                    title: "Status Wajib Dipilih!",
                    text: "Silakan pilih status progres sebelum mengupdate tugas.",
                    confirmButtonColor: "#C15E15"
                });
            } else {
                Swal.fire({
                    icon: "success",
                    title: "Tugas Diperbarui!",
                    text: "Status progres telah berhasil diperbarui.",
                    confirmButtonColor: "#C15E15"
                });
            }
        });

        document.getElementById("cancelButton").addEventListener("click", function() {
            window.history.back(); // Kembali ke halaman sebelumnya
        });
    </script>

</body>
</html>
